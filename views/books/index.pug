extends ../layout

block content
  a(href="/books/new") Add Book
  h1(class='title')= title
  p Welcome to #{title}

  list(class='booklist')
    ul(class='book')
      each user_book in userBookList
        div(class='author') Author: #{user_book.book.book_title}
        div(class='title') Title: #{user_book.book.book_author}
        div(class='rating') Rating: #{user_book.rating}
        div(class='status') Status: #{user_book.status}
        form(name="delete_book" action='/usersBooks/delete' method='POST')
          input(type="hidden" value=user_book.id name="book_id")
          input(type="hidden" name="_method" value="DELETE")
          button(id="delete_book" type="submit" value="Delete") Delete Book
        br