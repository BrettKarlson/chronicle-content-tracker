extends ../layout

block content
  a(href="/books/new") Add Book
  h1(class='title')= title
  p Welcome to #{title}

  list(class='booklist')
    ul(class='book')
      each book in bookList
        div(class='author') Author: #{book.book.book_title}
        div(class='title') Title: #{book.book.book_author}
        div(class='rating') Rating: #{book.rating}
        div(class='status') Status: #{book.status}



                 

