extends ../layout

block content
  h1= title
  p #{title}
  form(action="#")
      div.label 
      div.email
        input(type="email" placeholder="email")
      div.password
        input(type="password" placeholder="password")
      button(type="button") Log In
      p
        | Don't have an account? 
        break 
        a(href="/users/new") Sign Up Here
