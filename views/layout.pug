    link(rel="stylesheet" href="/stylesheets/style.css")
    link(rel="icon" href="/images/favicon.png")
    title Chronicle
  body
    nav.navbar.navbar-expand-md
      a.navbar-brand(href="/")
        img(src='/images/Chronicle_navbar_logo.png' alt='Chronicle' style='height:50px;')
      ul.navbar-nav.mr-auto
        li.navbar-item.navbar_button.d-flex.justify-content-center.align-items-center
          a.nav-link.navbar_button_text(href="/books") Books
        li.navbar-item.navbar_button.d-flex.justify-content-center.align-items-center
          a.nav-link.navbar_button_text(href="/films") Films
        li.navbar-item.navbar_button.d-flex.justify-content-center.align-items-center
          a.nav-link.navbar_button_text(href="/games") Games
      ul.navbar-nav
        li.navbar-item.navbar_button.d-flex.justify-content-center.align-items-center
          a.nav-link.navbar_button_text(href="/users/new") Sign Up
        li.navbar-item.navbar_button.d-flex.justify-content-center.align-items-center
          a.nav-link.navbar_button_text(href="/session/new") Log In
    
    main.container(role="main" style="padding: 30px;")     
      form.form-inline.my-2.my-lg-0
        input.form-control.mr-sm-2(type="text" placeholder="Input...")
        button.btn.btn-primary.my-2.my-sm-0(type="submit") OK
      block content
